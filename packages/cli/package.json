{
  "name": "@firebase-scripts/cli",
  "version": "1.0.0",
  "description": "A cli of useful scripts for firebase.",
  "keywords": [
    "firebase"
  ],
  "repository": "github:WillBooster/firebase-scripts",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "bin": {
    "firebase-scripts": "bin/main.cjs"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    ":start": "dotenv -e ../../.env -- build-ts run src/index.ts",
    ":start-prod": "yarn build && dotenv -e ../../.env -- yarn firebase-scripts",
    "build": "build-ts app",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "lint": "eslint --color \"./{scripts,src,tests}/**/*.{cjs,cts,js,jsx,mjs,mts,ts,tsx}\"",
    "lint-fix": "yarn lint --fix",
    "prettify": "prettier --cache --color --write \"**/{.*/,}*.{cjs,css,cts,htm,html,js,json,json5,jsx,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\"",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "dependencies": {
    "firebase-admin": "11.5.0",
    "yargs": "17.6.2"
  },
  "devDependencies": {
    "@types/eslint": "8.21.0",
    "@types/micromatch": "4.0.2",
    "@types/prettier": "2.7.2",
    "@types/yargs": "17.0.22",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "@willbooster/eslint-config-ts": "10.0.8",
    "@willbooster/prettier-config": "9.1.1",
    "@willbooster/renovate-config": "9.5.0",
    "build-ts": "5.5.0",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "dotenv-cli": "7.0.0",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-sort-class-members": "1.16.0",
    "eslint-plugin-sort-destructure-keys": "1.5.0",
    "eslint-plugin-unicorn": "45.0.2",
    "lint-staged": "13.1.2",
    "micromatch": "4.0.5",
    "prettier": "2.8.4",
    "sort-package-json": "2.4.1",
    "typescript": "4.9.5"
  },
  "packageManager": "yarn@4.0.0-rc.39",
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  }
}
