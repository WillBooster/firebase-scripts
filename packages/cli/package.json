{
  "name": "@firebase-scripts/cli",
  "version": "1.0.0",
  "description": "A cli of useful scripts for firebase.",
  "keywords": [
    "firebase"
  ],
  "repository": "github:WillBooster/firebase-scripts",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "bin": {
    "firebase-scripts": "bin/main.cjs"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    ":start": "dotenv -e ../../.env -- build-ts run src/index.ts",
    ":start-prod": "yarn build && dotenv -e ../../.env -- yarn firebase-scripts",
    "build": "build-ts app",
    "check-all-for-ai": "yarn check-for-ai && yarn test",
    "check-for-ai": "yarn install > /dev/null && yarn format > /dev/null 2> /dev/null || true && yarn lint-fix --quiet && yarn typecheck",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "lint": "eslint --color",
    "lint-fix": "yarn lint --fix",
    "prettify": "prettier --cache --color --write \"**/{.*/,}*.{cjs,css,cts,htm,html,java,js,json,json5,jsonc,jsx,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}\" \"!**/test{-,/}fixtures/**\" || true",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "dependencies": {
    "firebase-admin": "11.11.1",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@types/eslint": "8.56.11",
    "@types/micromatch": "4.0.9",
    "@types/yargs": "17.0.33",
    "@willbooster/eslint-config-ts": "11.4.3",
    "@willbooster/prettier-config": "10.2.0",
    "build-ts": "12.1.0",
    "conventional-changelog-conventionalcommits": "6.1.0",
    "dotenv-cli": "7.4.4",
    "eslint": "9.33.0",
    "eslint-config-flat-gitignore": "2.1.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-sort-class-members": "1.21.0",
    "eslint-plugin-sort-destructure-keys": "2.0.0",
    "eslint-plugin-unicorn": "60.0.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "16.3.0",
    "lint-staged": "16.1.5",
    "micromatch": "4.0.8",
    "prettier": "3.6.2",
    "prettier-plugin-java": "2.7.4",
    "sort-package-json": "3.4.0",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.0"
  },
  "packageManager": "yarn@4.9.2",
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}
