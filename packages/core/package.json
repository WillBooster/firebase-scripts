{
  "name": "@firebase-scripts/core",
  "version": "1.0.0",
  "description": "A library of useful functions for firebase.",
  "keywords": [
    "firebase"
  ],
  "repository": "github:WillBooster/firebase-scripts",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "main": "dist/index.min.cjs",
  "module": "dist/index.min.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "node esbuild.js",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "lint": "eslint --color \"./{src,__tests__,scripts}/**/*.{cjs,cts,js,jsx,mjs,mts,ts,tsx}\"",
    "lint-fix": "yarn lint --fix",
    "prettify": "prettier --color --write \"**/{.*/,}*.{cjs,css,cts,htm,html,js,json,json5,jsx,md,mjs,mts,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\"",
    "stop-firebase": "kill-port --port 8080",
    "test": "yarn test-wo-firebase && yarn test-w-firebase",
    "test-w-firebase": "FIREBASE_PROJECT_ID=test; yarn stop-firebase && yarn test-w-firebase-core",
    "test-w-firebase-core": "firebase emulators:exec --project $FIREBASE_PROJECT_ID \"yarn jest --silent --color --runInBand --forceExit __tests__/with-firebase\"",
    "test-wo-firebase": "yarn jest --color __tests__/without-firebase",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "dependencies": {
    "minimal-promise-pool": "1.2.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "2.0.5",
    "@types/eslint": "8.4.10",
    "@types/jest": "29.2.4",
    "@types/micromatch": "4.0.2",
    "@types/prettier": "2.7.1",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "@willbooster/eslint-config-ts": "10.0.8",
    "@willbooster/prettier-config": "9.1.1",
    "@willbooster/renovate-config": "9.4.2",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "esbuild": "0.16.7",
    "esbuild-plugin-d.ts": "1.1.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-sort-class-members": "1.16.0",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "eslint-plugin-unicorn": "44.0.2",
    "firebase": "9.15.0",
    "firebase-admin": "11.4.0",
    "firebase-tools": "11.18.0",
    "jest": "29.3.1",
    "kill-port": "2.0.1",
    "lint-staged": "13.1.0",
    "micromatch": "4.0.5",
    "prettier": "2.8.1",
    "sort-package-json": "2.1.0",
    "typescript": "4.9.4"
  },
  "peerDependencies": {
    "firebase-admin": ">=11"
  },
  "packageManager": "yarn@4.0.0-rc.33",
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  }
}
