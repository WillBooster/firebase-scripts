{
  "name": "firebase-scripts",
  "version": "0.0.0-semantically-released",
  "description": "A collection of useful scripts for firebase.",
  "keywords": [
    "firebase"
  ],
  "repository": "git@github.com:WillBooster/firebase-scripts.git",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "main": "dist/index.min.cjs",
  "module": "dist/index.min.mjs",
  "types": "dist/index.d.ts",
  "bin": "./bin/main.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "node esbuild.js",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "postinstall": "husky install",
    "lint": "eslint --color \"./{src,__tests__}/**/*.{cjs,js,jsx,mjs,ts,tsx}\"",
    "lint-fix": "yarn lint --fix",
    "prepublishOnly": "pinst --disable",
    "prettify": "prettier --color --write \"**/{.*/,}*.{cjs,css,htm,html,js,json,json5,jsx,md,mjs,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\"",
    "postpublish": "pinst --enable",
    "start": "node -r esbuild-register src/main.ts",
    "stop-firebase": "kill-port --port 8080",
    "test": "yarn test-wo-firebase && yarn test-w-firebase",
    "test-w-firebase": "yarn stop-firebase && dotenv -- yarn test-w-firebase-core",
    "test-w-firebase-core": "firebase emulators:exec --project $FIREBASE_PROJECT_ID \"yarn jest --silent --color --runInBand --forceExit __tests__/with-firebase\"",
    "test-wo-firebase": "dotenv -- yarn jest --color __tests__/without-firebase",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "dependencies": {
    "bser": "2.1.1",
    "bson": "4.6.0",
    "dayjs": "1.10.7",
    "dotenv": "10.0.0",
    "ejson": "2.2.2",
    "firebase-admin": "10.0.1",
    "minimal-promise-pool": "1.1.4",
    "yargs": "17.3.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "2.0.1",
    "@types/bser": "2.0.1",
    "@types/ejson": "2.1.3",
    "@types/eslint": "8.2.1",
    "@types/jest": "27.0.3",
    "@types/micromatch": "4.0.2",
    "@types/prettier": "2.4.2",
    "@types/yargs": "17.0.7",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "@willbooster/eslint-config-ts": "6.5.0",
    "@willbooster/prettier-config": "6.5.0",
    "@willbooster/renovate-config": "6.5.0",
    "conventional-changelog-conventionalcommits": "4.6.1",
    "dotenv-cli": "4.1.1",
    "esbuild": "0.14.5",
    "esbuild-plugin-d.ts": "1.1.0",
    "esbuild-register": "3.2.1",
    "eslint": "8.5.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-import": "2.25.3",
    "firebase": "9.6.1",
    "firebase-tools": "9.23.3",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "kill-port": "1.6.1",
    "lint-staged": "12.1.2",
    "micromatch": "4.0.4",
    "pinst": "2.1.6",
    "prettier": "2.5.1",
    "semantic-release": "18.0.1",
    "sort-package-json": "1.53.1",
    "typescript": "4.5.4"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.0-rc.8"
}
