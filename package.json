{
  "name": "firebase-scripts",
  "version": "0.0.0-semantically-released",
  "description": "A collection of useful scripts for firebase.",
  "keywords": [
    "firebase"
  ],
  "repository": "github:WillBooster/firebase-scripts",
  "license": "Apache-2.0",
  "author": "WillBooster Inc.",
  "main": "dist/index.min.cjs",
  "module": "dist/index.min.mjs",
  "types": "dist/index.d.ts",
  "bin": "./bin/main.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "node esbuild.js",
    "cleanup": "yarn format && yarn lint-fix",
    "format": "sort-package-json && yarn prettify",
    "postinstall": "husky install",
    "lint": "eslint --color \"./{src,__tests__,scripts}/**/*.{cjs,js,jsx,mjs,ts,tsx}\"",
    "lint-fix": "yarn lint --fix",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prettify": "prettier --color --write \"**/{.*/,}*.{cjs,css,htm,html,js,json,json5,jsx,md,mjs,scss,ts,tsx,vue,yaml,yml}\" \"!**/test-fixtures/**\"",
    "start": "node -r esbuild-register src/main.ts",
    "stop-firebase": "kill-port --port 8080",
    "test": "yarn test-wo-firebase && yarn test-w-firebase",
    "test-w-firebase": "yarn stop-firebase && dotenv -- yarn test-w-firebase-core",
    "test-w-firebase-core": "firebase emulators:exec --project $FIREBASE_PROJECT_ID \"yarn jest --silent --color --runInBand --forceExit __tests__/with-firebase\"",
    "test-wo-firebase": "dotenv -- yarn jest --color __tests__/without-firebase",
    "typecheck": "tsc --noEmit --Pretty"
  },
  "prettier": "@willbooster/prettier-config",
  "resolutions": {
    "npm/chalk": "^4.1.2"
  },
  "dependencies": {
    "dayjs": "1.11.3",
    "dotenv": "16.0.1",
    "firebase-admin": "10.3.0",
    "minimal-promise-pool": "1.1.4",
    "yargs": "17.5.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "2.0.3",
    "@types/eslint": "8.4.5",
    "@types/jest": "27.5.2",
    "@types/micromatch": "4.0.2",
    "@types/prettier": "2.6.3",
    "@types/yargs": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.30.3",
    "@typescript-eslint/parser": "5.30.3",
    "@willbooster/eslint-config-ts": "9.0.0",
    "@willbooster/prettier-config": "9.0.0",
    "@willbooster/renovate-config": "9.3.0",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "dotenv-cli": "4.1.1",
    "esbuild": "0.14.48",
    "esbuild-plugin-d.ts": "1.1.0",
    "esbuild-register": "3.3.3",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.1.4",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-sort-class-members": "1.14.1",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "firebase": "9.8.4",
    "firebase-tools": "10.9.2",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "kill-port": "1.6.1",
    "lint-staged": "13.0.3",
    "micromatch": "4.0.5",
    "pinst": "3.0.0",
    "prettier": "2.7.1",
    "semantic-release": "18.0.1",
    "sort-package-json": "1.57.0",
    "typescript": "4.7.4"
  },
  "packageManager": "yarn@4.0.0-rc.11",
  "engines": {
    "node": ">=14"
  }
}
